    <div class="container">
        <form action="/auth/edit_class/{{user.id}}" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">Class</label>
                <input type="text" class="form-control" value="{{user.class}}" id="exampleInputEmail1" name="class1" aria-describedby="emailHelp">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Section</label>
                <input type="text" class="form-control" value="{{user.section}}" name="section" id="exampleInputPassword1">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {{#if message}}
                <h4 class="alert alert-danger mt-4">{{message}}</h4>
            {{/if}}
    </div>

